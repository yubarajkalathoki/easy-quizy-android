<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepbhai.easyquiz.Summary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Total Question solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/btnTotalQuestion"
        android:background="#27ae60"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Right Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/btnRightAnswer"
        android:background="#27ae60"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_below="@+id/btnTotalQuestion"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Play Again"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlayAgain"
        android:background="@drawable/roundbutton"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="36sp"
        android:textColor="#ffffff"
        android:onClick="playAgain"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Wrong Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/btnWrongAnswer"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_below="@+id/btnRightAnswer"
        android:layout_alignStart="@+id/btnRightAnswer" />

</RelativeLayout>
